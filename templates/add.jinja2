{% extends 'base.jinja2' %}

{% block subtitle %}Add a donation{% endblock subtitle %}

{% block content %}
    <form method="POST">
        {% if error %}<p>{{ error }}</p>{% endif %}
        <label for="donor">Donor Name: </label><input type="text" id="donor" name="donor">
        <label for="donation">Donation Amount: </label><input type="number" id="donation" name="donation_amount">
        <input type="submit" value="Add Donation">
    </form>
{% endblock content %}
